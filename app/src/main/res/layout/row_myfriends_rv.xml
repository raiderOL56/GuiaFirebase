<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/misAmigos_CV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/misAmigos_IVuser"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/outline_account_circle_24"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/misAmigos_IVuser"
            android:layout_toRightOf="@+id/misAmigos_IVuser"
            android:layout_marginHorizontal="5dp">

            <TextView
                android:id="@+id/misAmigos_TXTvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="24dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/misAmigos_TXTvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="18dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/misAmigos_TXTvEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/misAmigos_TXTvGenero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="14dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>